<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>serviceplatform</groupId>
  <artifactId>serviceplatform.services</artifactId>
  <name>serviceplatform.services</name>
  <version>1.0.0-SNAPSHOT</version>
  <url>http://maven.apache.org</url>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <resource>META-INF/spring.handlers</resource>
                </transformer>
                <transformer>
                  <resource>META-INF/spring.schemas</resource>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>commons-io</artifactId>
      <version>1.3.2</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>com.oneassist.communicationgateway</groupId>
      <artifactId>communicationgateway.client</artifactId>
      <version>1.0.0</version>
      <scope>system</scope>
      <systemPath>${basedir}/../serviceplatform.webservice/src/main/webapp/WEB-INF/lib/communicationgateway.client-1.0.0.jar</systemPath>
    </dependency>
  </dependencies>
  <properties>
    <drools.version>6.5.0.Final</drools.version>
    <hibernate-entitymanager.version>4.2.7.Final</hibernate-entitymanager.version>
    <main.basedir>${project.parent.basedir}</main.basedir>
    <maven.compiler.target>1.7</maven.compiler.target>
    <activiti-version>5.18.0</activiti-version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <springdata.version>1.10.2.RELEASE</springdata.version>
    <maven.compiler.source>1.7</maven.compiler.source>
    <spring.version>4.3.2.RELEASE</spring.version>
  </properties>
</project>

